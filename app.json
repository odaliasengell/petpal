{
  "expo": {
    "name": "PetPal",
    "slug": "petpal",
    "scheme": "petpal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#7FDCC4"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petpal.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#7FDCC4"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.petpal.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "description": "Aplicación para dueños de mascotas - Registro organizado y estético del bienestar animal"
    }
  }
}
